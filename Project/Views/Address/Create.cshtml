
@model AddressCreateViewModel

<div class="container jumbotron">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 p-5">
            <div class="card-block">
                <div class="card-header">
                    <h1 class="h3 mb-3 font-weight-normal text-center">Add Address</h1>
                </div>
                <form asp-controller="Address" asp-action="Create" method="post">
                    <div class="mt-2">
                        <input asp-for="AddressLine" placeholder="Address Line" class="form-control" />
                        <span class="text-danger" asp-validation-for="AddressLine"></span>
                    </div>
                    <div class="mt-2">
                        <input asp-for="Suburb" placeholder="Suburb" class="form-control" />
                        <span class="text-danger" asp-validation-for="Suburb"></span>
                    </div>
                    <div class="mt-2">
                        <input asp-for="State" placeholder="State" class="form-control" />
                        <span class="text-danger" asp-validation-for="State"></span>
                    </div>
                    <div class="mt-2">
                        <input asp-for="PostCode" placeholder="Post Code" class="form-control" value="" />
                        <span class="text-danger" asp-validation-for="PostCode" ></span>
                    </div>

                    <div class="mt-2">
                        <input asp-for="ProfileId" hidden="hidden" />

                    </div>
                    <div class="mt-2">
                        <input type="submit" value="Add Address" class="btn btn-info" />
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>

</div>


