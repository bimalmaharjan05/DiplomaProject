@model AccountUpdateProfileViewModel

<div class="container jumbotron">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 p-5">
            <div class="card-block">
                <div class="card-header">
                    <h3> Update Profile</h3>
                </div>
                <form asp-controller="Account" asp-action="UpdateProfile" method="post">

                    <div class="mt-2">
                        <label asp-for="FirstName" class="sr-only">First Name</label>
                        <input asp-for="FirstName" class="form-control" placeholder="First Name">
                    </div>
                    <div class="mt-2">
                        <label asp-for="LastName" class="sr-only">Last Name</label>
                        <input asp-for="LastName" class="form-control" placeholder="Last Name">
                    </div>
                    <div class="mt-2">
                        <label asp-for="Email" class="sr-only">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="Email">
                    </div>
                    <div class="mt-2">
                        <label asp-for="Dob" class="sr-only">Date of Birth</label>
                        <input asp-for="Dob" type="date" class="form-control" placeholder="Date of Birth">
                    </div>
                    <div class="mt-2">
                        <label asp-for="Phone" class="sr-only">Phone</label>
                        <input asp-for="Phone" class="form-control" placeholder="Phone">
                    </div>
                    <div class="mt-2">
                        <input type="submit" value="Save Changes" class="btn btn-info" />
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-3"></div>
    </div>

</div>