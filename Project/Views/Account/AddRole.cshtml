@model AccountAddRoleViewModel

<div class="container jumbotron">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 p-5">
            <div class="card-block">
                <div class="card-header">
                    <h3> New Role</h3>
                </div>
                <form asp-controller="Account" asp-action="AddRole" method="post">
                    <div class="mt-2">
                        <input asp-for="Name" placeholder="Name" class="form-control" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                    <div class="mt-2">
                        <input type="submit" value="Create Role" class="btn btn-info" />
                    </div>
                </form>

            </div>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>



